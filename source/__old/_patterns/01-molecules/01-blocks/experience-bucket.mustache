<div class="experience-bucket {{ borderColour }}-border">
    <picture class="bucket-image">
        <source srcset="https://picsum.photos/900/1000/?random" media="(min-width: 80em)">
        <source srcset="https://picsum.photos/600/720/?random" media="(min-width: 45em)">
        <img src="https://picsum.photos/300/200/?random" alt="" title="">
    </picture><!-- /.bucket-image -->

    <div class="bucket-content {{ styleModifier }}">
        {{#communities}}
          {{> atoms-property-logo-communities }}
        {{/communities}}

        {{#lifestyle}}
          {{> atoms-property-logo-lifestyle }}
        {{/lifestyle}}

        {{#living}}
          {{> atoms-property-logo-living }}
        {{/living}}
        <p>This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
        {{> atoms-primary-button:white(primary-button-text:"Experience {{brand}}") }}
    </div><!-- /.bucket-content -->
</div><!-- /.experience-bucket -->
