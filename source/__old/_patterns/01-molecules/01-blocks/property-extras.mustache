<section class="property-extras mt-2 mt-lg-0">
  <div class="container-fluid">

    <div class="row">
      <div class="col-sm-6 col-lg-3 mb-0 mb-sm-2 mb-lg-0 bg-{{ leftBlock.block-colour }} justify-content-center align-items-center d-flex flex-column text-center p-4">
        <h4 class="secondary-heading">{{ leftBlock.title }}</h4>
        <p class="m-0">{{ leftBlock.content }}</p>
      </div><!-- /.col -->
      <div class="col-sm-6 col-lg-3 mb-2 mb-lg-0 p-0">
        <a href="https://www.youtube.com/watch?v=XIMLoLxmTDw" class="video-modal" aria-label="Video Title">
          <img src="{{ leftBlock.imgSrc }}" alt="" title="" class="m-0" />
        </a>
      </div><!-- /.col -->
      <div class="col-sm-6 col-lg-3 mb-0 mb-sm-2 mb-lg-0 bg-{{ rightBlock.block-colour }} justify-content-center align-items-center d-flex flex-column text-center p-4">
        <blockquote class="testimony">
          <p>&ldquo;{{ rightBlock.quote }}&rdquo;</p>
          <span class="quotee">- {{rightBlock.quotee }}</span>
        </blockquote>
      </div><!-- /.col -->
      <div class="col-sm-6 col-lg-3 mb-2 mb-lg-0 p-0">
        <a href="https://www.youtube.com/watch?v=XIMLoLxmTDw" class="video-modal" aria-label="Video Title">
          <img src="{{ rightBlock.imgSrc }}" alt="" title="" class="m-0" />
        </a>
      </div><!-- /.col -->
    </div><!-- /.row -->

  </div>
</section>
