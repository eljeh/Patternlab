<header id="header" class="container-fluid {{#background-color}}header-{{background-color}}{{/background-color}}">
    <div class="d-flex flex-row justify-content-between align-items-end">
        <div class="p-2 logo">
            {{> atoms-logo }}
        </div>

        <div class="p-2">
            <ul id="main-navigation" class="list-unstyled d-flex flex-row justify-content-center align-items-baseline" aria-label="Main Menu" role="menu">
              <li role="menuitem" class="p-2 m-nav-find">
                <a href="#" tabindex="0">
                  Find Your Home
                </a>
              </li>
              <li role="menuitem" class="p-2 m-nav-experience">
                <a href="{{ link.pages-lifestyle-experience }}" tabindex="0">
                  Experience Boardwalk
                </a>
              </li>
              <li role="menuitem" class="p-2 m-nav-stories">
                <a href="{{ link.pages-our-stories-landing }}" tabindex="0">
                  Blog
                </a>
              </li>
              <li role="menuitem" class="p-2 m-nav-careers">
                <a href="{{ link.pages-working-with-us }}" tabindex="0">
                  Careers
                </a>
              </li>
              <li role="menuitem" class="p-2 m-nav-investor">
                <a href="{{ link.pages-working-with-us }}" tabindex="0">
                  Investors
                </a>
              </li>
              <li role="menuitem" class="p-2 m-nav-aboutus">
                <a href="#" tabindex="0">
                  About Us
                </a>
              </li>
            </ul>
        </div>

        <div class="p-3">
            <ul role="menu" id="utility-navigation" class="list-unstyled d-flex flex-row justify-content-end align-items-baseline">

                <li role="menuitem" class="u-nav-login">
                  <a class="login-link" href="https://former.bwalk.com/customer/en-ca/Account/Login" tabindex="0">
                      <span>Resident Member</span> Login
                  </a>
                </li>

                <li role="menuitem" class="u-nav-lang">
                  <a href="#" aria-label="Change Language">FR</a>
                </li>


                <li role="menuitem" class="u-nav-search">
                    <a href="#" class="open-search" aria-label="Open Search" tabindex="0">
                        <i class="icon-search"></i><span class="visuallyhidden">Search</span>
                    </a>
                </li>


                <li role="menuitem" class="u-nav-sitesearch hidden">
                    <form method="get" action="SiteSearchURL" role="search">
                        <div class="input-search-container">
                            <input name="addsearch" type="search" class="form-control" placeholder="Search" aria-label="Search" tabindex="-1">
                            <button type="submit" class="icon-search" tabindex="-1"></button>
                        </div>
                    </form>
                    <a href="#" class="close-search" aria-label="Close Search" tabindex="0">
                        <i class="icon-close"></i><span class="visuallyhidden">Close</span>
                    </a>
                </li>

            </ul>
        </div>


        <div class="p2 align-items-center mobile-nav-toggle">
            {{> atoms-hamburger}}
        </div>
    </div>
</header>
