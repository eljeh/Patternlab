<div class="property-listings">
    <div class="container">
      <h2 class="heading small-heading">Live with Us</h2>
      <div class="row">
        <div class="container mt-2 mb-2">
            <div class="row justify-content-end">
                <div class="col-md-3">
                    {{> atoms-select:form-control|form-control-lg(form-field-select-id:"cf-province",form-field-select-placeholder:"Relevance") }}
                </div>
            </div> <!--/.row -->
        </div> <!--/.container -->
      </div>
        <div class="row">
            <div class="col-12">
                {{> molecules-property-list-item(property-type:"communities",loop-index:"0")}}
                {{> molecules-property-list-item(property-type:"lifestyle",loop-index:"1")}}
                {{> molecules-property-list-item(property-type:"living",loop-index:"2")}}
                {{> molecules-property-list-item(property-type:"communities", special-offer: true,loop-index:"3")}}
                {{> molecules-property-list-item(property-type:"lifestyle", special-offer:true,loop-index:"4")}}
                {{> molecules-property-list-item(property-type:"living", special-offer:true,loop-index:"5")}}
            </div>
        </div>
    </div>
</div>
